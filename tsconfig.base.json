{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "strictBindCallApply": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom", "es2019"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "ng-morph/style": ["libs/ng-morph/style/index.ts"],
      "ng-morph/template": ["libs/ng-morph/template/index.ts"],
      "ng-morph/typescript": ["libs/ng-morph/typescript/index.ts"],
      "ng-morph-form": ["libs/ng-morph-form/src/index.ts"],
      "sandbox": ["libs/sandbox/src/index.ts"],
      "ng-plugin": ["libs/ng-plugin/src/index.ts"],
      "ng-ast": ["libs/ng-ast/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
